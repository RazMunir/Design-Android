<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LottieAnimationActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_lottie_animation_programming"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:lottie_rawRes="@raw/programming"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_lottie_animation_loading"
        android:layout_below="@+id/activity_lottie_animation_programming"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/loading"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activity_lottie_animation_file_transfer_animation"
        android:layout_below="@+id/activity_lottie_animation_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/files_transfer_animation"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>
</RelativeLayout>