<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesignAndroidApplication" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    Login Ui Input text layout style-->
    <style name="EditScreenTextInputLayoutStyle" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorControlNormal">@color/textInputLayout</item>
        <item name="colorControlActivated">@color/textInputLayout</item>
        <item name="colorControlHighlight">@color/textInputLayout</item>
        <item name="colorAccent">@color/textInputLayout</item>
        <item name="android:textColorHint">@color/textInputLayout</item>
    </style>

<!--    SignInSignUpActivity-->
    <style name="signInSignUpStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF2729C3</item>
        <item name="colorPrimaryDark">#FF2729C3</item>
        <item name="colorAccent">#FF2729C3</item>
    </style>

<!--  SignInActivity Theme-->
    <style name="Theme.SignIn.CustomTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/teal_200</item>
        <!--        Screen bottom panel color-->
        <item name="android:colorBackground">@color/white</item>
        <!--        Radio button focus color-->
        <item name="colorSecondary">@color/teal_200</item>
        <!--        status bar colot-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_200</item>
        <!--        to change editText's cursor, bottom bar color-->
        <item name="colorAccent">@color/softBalck</item>

        <item name="primaryBackgroundColor">@color/textInputLayout</item>
        <item name="secondaryBackgroundColor">@color/white</item>
        <item name="buttonColor">@color/teal_200</item>
        <item name="iconColor">@color/softBalck</item>
        <item name="titleTextColor">@color/black</item>
        <item name="priceTextColor">@color/teal_200</item>
        <item name="textColor">@color/black</item>
        <item name="buttonTintColor">@color/black</item>
    </style>

<!--     Edit text theme for SignInActivity-->
    <style name="Theme.EditText" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:background">@drawable/singn_in_sign_up_buttonshape</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/teal_200</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textColorHint">?attr/secondaryBackgroundColor</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint" tools:targetApi="m">?attr/iconColor</item>
    </style>

<!--    Edit text theme for BlueActivity-->
    <style name="TextInputLayoutTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

</resources>